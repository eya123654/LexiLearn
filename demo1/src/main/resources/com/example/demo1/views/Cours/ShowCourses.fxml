<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.0" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../Css/ShowCourses.css" spacing="10" alignment="TOP_CENTER" style="-fx-padding: 20; -fx-background-color: #13293d;" fx:controller="com.example.demo1.Controllers.CoursController">
        <Label text=" All Courses" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
        <TableView fx:id="courseTable" style="-fx-background-radius: 5; -fx-border-color: #d3d3d3; -fx-border-radius: 5;">
            <columns>
                <TableColumn text="ID" fx:id="idColumn" minWidth="100" prefWidth="150"/>
                <TableColumn text="Name" fx:id="nameColumn" minWidth="200" prefWidth="300"/>
                <TableColumn text="Description" fx:id="descriptionColumn" minWidth="300" prefWidth="450"/>
                <TableColumn text="Progress" fx:id="progressColumn" minWidth="100" prefWidth="150"/>
                <TableColumn text="Image" fx:id="imageColumn" minWidth="200" prefWidth="300"/>
                <TableColumn text="Price" fx:id="priceColumn" minWidth="100" prefWidth="150"/>
            </columns>
        </TableView>


    <HBox spacing="10" styleClass="button-container">
        <Button fx:id="addButton" onAction="#addCours" styleClass="icon-button">
            <graphic>
                <FontAwesomeIconView glyphName="PLUS" styleClass="button-icon"/>
            </graphic>
        </Button>

        <Button fx:id="editButton"  styleClass="icon-button" onAction="#updateCours">
            <graphic>
                <FontAwesomeIconView glyphName="PENCIL_ALT" styleClass="button-icon"/>
            </graphic>
        </Button>

        <Button fx:id="deleteButton" styleClass="icon-button" onAction="#deleteCours">
            <graphic>
                <FontAwesomeIconView glyphName="TRASH" styleClass="button-icon" />
            </graphic>
        </Button>
    </HBox>

</VBox>
